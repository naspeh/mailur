#!/bin/bash
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -exuo pipefail
. bin/activate

secret=${secret:-root}

pacman --noconfirm -S dovecot

id -u vmail || (
groupadd -g 5000 vmail
useradd -m -d /home/vmail -s /bin/false -u 5000 -g vmail vmail
)

[ -d '/etc/dovecot.bak' ] || (
    mv /etc/dovecot{,.bak}
    rm -rf /etc/dovecot
    mkdir /etc/dovecot
)
cat <<EOF > /etc/dovecot/dovecot.conf
auth_debug=yes
auth_debug_passwords=yes
auth_verbose_passwords=sha1
mail_debug=yes
verbose_ssl=yes

# ssl = required
# ssl_key = </etc/ssl/dovecot/server.key
# ssl_cert = </etc/ssl/dovecot/server.pem
# ssl_client_ca_dir = /etc/ssl/certs/

# should be big enough to save all message-ids as metadata
imap_max_line_length = 10M

# strange behavior when applying flags for mdbox,
# somehow flags are mixed up on messages
# mail_location = mdbox:~
# mdbox_rotate_size = 100M
mail_location = sdbox:~

# mail_always_cache_fields = date.sent date.saved hdr.references

# TODO: maybe can be used during the import
# mail_fsync = never

auth_master_user_separator = *
passdb {
    driver = passwd-file
    args = /etc/dovecot/passwd.masters
    master = yes
}
passdb {
    driver = passwd-file
    args = /etc/dovecot/passwd.users
}
userdb {
    driver = passwd-file
    args = /etc/dovecot/passwd.users
    default_fields = uid=vmail gid=vmail home=/home/vmail/%u
}

mail_plugins = \$mail_plugins acl notify mail_log virtual fts fts_squat
plugin {
    acl = vfile:/etc/dovecot/acl
    acl_globals_only = yes

    mail_log_events = delete undelete expunge copy save flag_change
    mail_log_fields = uid box msgid flags

    fts = squat
    fts_squat = partial=4 full=20
    #fts_autoindex=yes
    #fts_autoindex_max_recent_msgs=100
}

mail_attribute_dict = file:%h/dovecot-attributes
protocol imap {
    mail_max_userip_connections = 20
    imap_metadata = yes
}

namespace {
    prefix =
    separator = /
    mailbox Src {
        auto = subscribe
    }
    mailbox All {
        auto = subscribe
        special_use = \All
    }
    mailbox Contacts {
        auto = subscribe
    }
    mailbox Deleted {
        auto = subscribe
    }
}
namespace {
    inbox = yes
    prefix = tags/
    separator = /
    location = virtual:%h/tags
    mailbox Trash {
        auto = subscribe
        special_use = \Trash
    }
    mailbox Spam {
        auto = subscribe
        special_use = \Junk
    }
    mailbox Drafts {
        auto = subscribe
        special_use = \Drafts
    }
    mailbox Pinned {
        auto = subscribe
        special_use = \Flagged
    }
}

protocols = imap
service imap-login {
    inet_listener imap {
        port = 143
        address = localhost
    }
    inet_listener imaps {
        port = 0
        ssl = yes
    }

    process_min_avail = 1
}
service imap {
    vsz_limit = 1G
}
service indexer-worker {
    vsz_limit = 1G
}
service doveadm {
    inet_listener {
        port = 12345
    }
    inet_listener http {
        port = 9000
        address = localhost
    }
}
doveadm_port = 12345
doveadm_password = $secret
EOF
cat <<EOF > /etc/dovecot/passwd.masters
root:{plain}$secret
EOF
cat <<"EOF" > /etc/dovecot/acl
* owner lrst
All owner lrst
Src owner lrpi
* user=root lrwstipe
EOF

bin/users

systemctl enable dovecot
systemctl restart dovecot
