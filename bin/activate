#!/bin/bash
if [[ -o xtrace ]]; then
    xtrace=1
    set +x
else
    xtrace=
fi

PATH=./node_modules/.bin:$PATH

# Fix $PATH if no /usr/sbin in it
echo :$PATH: | grep :/usr/sbin: | export PATH=/usr/sbin:$PATH

cd /opt/mailur
envfile=${envfile-bin/env}
[ -n "$envfile" ] && [ -f $envfile ] && . $envfile

env=${env:-env}
[ -d $env ] && . $env/bin/activate

[ -z "$xtrace" ] || set -x
